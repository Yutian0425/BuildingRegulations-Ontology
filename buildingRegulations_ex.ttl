@prefix rdf:  <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix xsd:  <http://www.w3.org/2001/XMLSchema#> .
@prefix owl:  <http://www.w3.org/2002/07/owl#> .
@prefix ifc:  <https://standards.buildingsmart.org/ifc/IFC4#> .
@prefix ex:   <http://yutian-research.org/buildingRegulations#> .

##################################################################
# 建筑法规语义模型 (Yutian Yi, 2025)
# 目的：定义 12 条法规中涉及的建筑空间类、构件类及其属性
##################################################################

#######################
# 建筑空间与构件类定义
#######################

ex:Storey a rdfs:Class ;
    rdfs:label "建筑层"@zh ;
    rdfs:subClassOf ifc:IfcBuildingStorey .

ex:Bedroom a rdfs:Class ;
    rdfs:label "卧室"@zh ;
    rdfs:subClassOf ifc:IfcSpace .

ex:LivingRoom a rdfs:Class ;
    rdfs:label "起居室"@zh ;
    rdfs:subClassOf ifc:IfcSpace .

ex:Kitchen a rdfs:Class ;
    rdfs:label "厨房"@zh ;
    rdfs:subClassOf ifc:IfcSpace .

ex:Bathroom a rdfs:Class ;
    rdfs:label "卫生间"@zh ;
    rdfs:subClassOf ifc:IfcSpace .

ex:Corridor a rdfs:Class ;
    rdfs:label "套内过道"@zh ;
    rdfs:subClassOf ifc:IfcSpace .

ex:SlopedRoom a rdfs:Class ;
    rdfs:label "坡屋顶房间"@zh ;
    rdfs:subClassOf ex:Bedroom .

ex:EntranceDoor a rdfs:Class ;
    rdfs:label "户门"@zh ;
    rdfs:subClassOf ifc:IfcDoor .

ex:BedroomDoor a rdfs:Class ;
    rdfs:label "卧室门"@zh ;
    rdfs:subClassOf ifc:IfcDoor .

ex:KitchenDoor a rdfs:Class ;
    rdfs:label "厨房门"@zh ;
    rdfs:subClassOf ifc:IfcDoor .

ex:BathroomDoor a rdfs:Class ;
    rdfs:label "卫生间门"@zh ;
    rdfs:subClassOf ifc:IfcDoor .

ex:BalconyRailing a rdfs:Class ;
    rdfs:label "阳台栏杆"@zh ;
    rdfs:subClassOf ifc:IfcRailing .

##############################
# 属性定义（与 IFC 属性对齐）
##############################

ex:usableArea a rdf:Property ;
    rdfs:label "使用面积"@zh ;
    rdfs:domain ex:Bedroom, ex:Kitchen, ex:LivingRoom ;
    rdfs:range xsd:decimal ;
    owl:equivalentProperty ifc:GrossFloorArea .

ex:shorterSideNetWidth a rdf:Property ;
    rdfs:label "最短边净宽"@zh ;
    rdfs:domain ex:Bedroom ;
    rdfs:range xsd:decimal .

ex:storeyHeight a rdf:Property ;
    rdfs:label "层高"@zh ;
    rdfs:domain ex:Storey ;
    rdfs:range xsd:decimal ;
    owl:equivalentProperty ifc:Height .

ex:netHeight a rdf:Property ;
    rdfs:label "室内净高"@zh ;
    rdfs:domain ex:Bedroom, ex:LivingRoom, ex:Kitchen, ex:Bathroom ;
    rdfs:range xsd:decimal ;
    owl:equivalentProperty ifc:Height .

ex:localMinNetHeight a rdf:Property ;
    rdfs:label "局部最低净高"@zh ;
    rdfs:domain ex:Bedroom, ex:LivingRoom ;
    rdfs:range xsd:decimal .

ex:areaBelow2_6 a rdf:Property ;
    rdfs:label "低于2.6m的面积"@zh ;
    rdfs:domain ex:Bedroom, ex:LivingRoom ;
    rdfs:range xsd:decimal .

ex:areaAbove2_2 a rdf:Property ;
    rdfs:label "高于2.2m的面积"@zh ;
    rdfs:domain ex:SlopedRoom ;
    rdfs:range xsd:decimal .

ex:floorDrainSlope a rdf:Property ;
    rdfs:label "排水坡度"@zh ;
    rdfs:domain ex:Bathroom ;
    rdfs:range xsd:decimal .

ex:thresholdDeltaHeight a rdf:Property ;
    rdfs:label "门槛高差"@zh ;
    rdfs:domain ex:EntranceDoor ;
    rdfs:range xsd:decimal .

ex:netWidth a rdf:Property ;
    rdfs:label "净宽"@zh ;
    rdfs:domain ex:Corridor ;
    rdfs:range xsd:decimal ;
    owl:equivalentProperty ifc:Width .

ex:clearWidth a rdf:Property ;
    rdfs:label "通行净宽"@zh ;
    rdfs:domain ex:EntranceDoor, ex:BedroomDoor, ex:KitchenDoor, ex:BathroomDoor ;
    rdfs:range xsd:decimal ;
    owl:equivalentProperty ifc:ClearWidth .

ex:railingNetHeight a rdf:Property ;
    rdfs:label "栏杆净高"@zh ;
    rdfs:domain ex:BalconyRailing ;
    rdfs:range xsd:decimal ;
    owl:equivalentProperty ifc:Height .

##########################
# 附加描述 (可选扩展)
##########################

ex:BuildingRegulationModel a owl:Ontology ;
    rdfs:label "建筑法规语义模型（Yutian Yi）"@zh ;
    rdfs:comment "定义住宅建筑法规检查所需的语义类与属性，支持 SHACL 规则验证与 Revit 数据对接。"@zh .
